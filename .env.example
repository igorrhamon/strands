# =============================================================================
# Strands Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# NEO4J DATABASE
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=changeme_secure_password_here
NEO4J_DATABASE=neo4j

# =============================================================================
# QDRANT VECTOR DATABASE
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
# QDRANT_API_KEY=  # Optional for local development

# =============================================================================
# PROMETHEUS MONITORING
# =============================================================================
PROMETHEUS_URL=http://localhost:9090

# =============================================================================
# GRAFANA DASHBOARDS
# =============================================================================
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_PASSWORD=changeme_grafana_password
# GRAFANA_API_KEY=  # Optional, use for API access

# =============================================================================
# FASTAPI SERVER
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_LOG_LEVEL=INFO
API_ENABLE_CORS=true

# =============================================================================
# SWARM INTELLIGENCE
# =============================================================================
SWARM_MAX_RETRY_ROUNDS=10
SWARM_MAX_RUNTIME_SECONDS=300.0
SWARM_MAX_TOTAL_ATTEMPTS=50
SWARM_USE_LLM_FALLBACK=true
SWARM_LLM_FALLBACK_THRESHOLD=0.5
SWARM_LLM_AGENT_ID=llm_agent

# =============================================================================
# MCP ENDPOINTS (Legacy - Optional)
# =============================================================================
GRAFANA_MCP_URL=http://localhost:8080/mcp/grafana
GITHUB_MCP_URL=http://localhost:8080/mcp/github
KUBECTL_MCP_URL=http://localhost:8080/mcp/kubectl
MYSQL_MCP_URL=http://localhost:8080/mcp/mysql

# =============================================================================
# VECTOR STORE (ChromaDB - Legacy)
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# =============================================================================
# LLM PROVIDER
# =============================================================================
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4

# =============================================================================
# GOVERNANCE
# =============================================================================
CONFIDENCE_THRESHOLD=0.7
HUMAN_REVIEW_REQUIRED=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
AUDIT_LOG_PATH=./audit_logs

# =============================================================================
# AGENTES PIPELINE (ROI2 Integration)
# =============================================================================
AGENTES_ROI2_ENDPOINT=http://localhost:8000
AGENTES_ROI2_TOKEN=your-token-here

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# For production deployment:
# 1. Set ENVIRONMENT=production
# 2. Set DEBUG=false
# 3. Change all default passwords (NEO4J_PASSWORD, GRAFANA_ADMIN_PASSWORD)
# 4. Use strong, randomly generated passwords (min 32 chars)
# 5. Store secrets in a proper secret management system (Vault, AWS Secrets Manager)
# 6. Never log or print sensitive configuration values
# 7. Review and enable only the services you need
